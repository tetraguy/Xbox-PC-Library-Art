<Window x:Class="XboxSteamCoverArtFixer.IconPickerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Pick an Icon" Height="560" Width="880" MinHeight="420" MinWidth="640"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- header -->
            <RowDefinition Height="*"/>
            <!-- gallery -->
            <RowDefinition Height="Auto"/>
            <!-- buttons -->
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Vertical" Margin="0,0,0,8">
            <TextBlock Text="Select an icon from SteamGridDB" FontSize="16" FontWeight="SemiBold"/>
            <TextBlock x:Name="GameTitle" Text="" FontSize="13" Foreground="#555"/>
        </StackPanel>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <ItemsControl x:Name="IconsWrap">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
        </ScrollViewer>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
            <Button Content="Cancel" Margin="0,0,8,0" Padding="12,6" Click="Cancel_Click"/>
            <Button x:Name="ConfirmButton" Content="Use Selected" Padding="12,6" IsEnabled="False" Click="Confirm_Click"/>
        </StackPanel>
    </Grid>
</Window>
